    padding: 0 0 60px 0;
}
.boxInput{
    width:420px;
    height: 90px;
    
}
.boxInput input{
    font-size: 18px;
    color: #fff;
}
/*web background*/
.container {
    display: table;
    height: 100%;
}
#loginBtn{
    margin: auto;
    background: url('../../images/log_pre.png') no-repeat ;
    /* background-size:213px 33px; */
    /* width: 213px;
    height: 33px; */
    border: 0px;
    /* margin-left: 50px; */
    /* 最新的css */
    width: 220px;
    height: 70px;
    background-size: 100% 60%;
    display: block;
}
#loginBtn:hover{
    background: url('../../images/log_hover.png') no-repeat;
    /* background-size:213px 33px; */
    /* width: 213px;
    height: 33px; */
    border: 0px;
    /* margin-left: 50px; */
    /* 最新的css */
    background-size: 100% 60%;
    outline: none;
    display: block;
}
#loginBtn:focus {outline:none;} /*for IE*/
#loginBtn::-moz-focus-inner {border-color: transparent;} /*for mozilla*/

.check i{
    background-color:url('../../images/check.png') no-repeat;
    height:27px ;
}

.row {
    display: table-cell;
    vertical-align: middle;
}

/* centered columns styles */
.row-centered {
    text-align: center;
    height: 614px;
}

.col-centered {
    margin-top: 50px;
    display: inline-block;
    float: none;
    text-align: left;
    margin-right: -4px;
}

.logininput {
    border: 0px;
    margin-top: 2px;
}

.name {
    background: url(../../images/uname.png) no-repeat left center;
    /* 最新的css */
    background-size: 100% auto;
}

.pwd {
    background: url(../../images/pwd.png) no-repeat left center;
     /* 最新的css */
     background-size: 100% auto;
}

.form-control {
    margin-top: 40px;
    padding-right: 50px;
    background-color: #2BAFE8;
    color: white;

}
input::-webkit-input-placeholder { /* WebKit, Blink, Edge */
    color:    white!important;
    font-size: 20px;
    text-align: left;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
    color:    #909;
    opacity:  1;
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
    color:    #909;
    opacity:  1;
}
:-ms-input-placeholder { /* Internet Explorer 10-11 */
    color:    #909;
}
::-ms-input-placeholder { /* Microsoft Edge */
    color:    #909;
}


