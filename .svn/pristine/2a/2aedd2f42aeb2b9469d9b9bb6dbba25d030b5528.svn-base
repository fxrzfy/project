html, body {
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
}

body {
    background: url('../../images/bg.png') no-repeat;
    width: 100%;
    height: 100%;
    background-size: 100% 100%;
    text-align: center;
    vertical-align: middle;
}

.border {
    border: red 1px solid;
}
.bordergreen {
    border: green 1px solid;
}

.well {
    background: url('../../images/login.png') no-repeat;
    background-size: 100% auto;
    /* width: 728px; */
